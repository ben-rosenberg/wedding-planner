@model Wedding

@{
    ViewData["Title"] = @Model.WeddingName + "'s Wedding";
}

<h1 class="text-center">@ViewData["Title"]</h1>
<h3>Save The Date: @Model.Date.ToShortDateString()</h3>
<h3>@Model.Address</h3>
<div class="card">
    <div class="card-body">
        <h5 class="card-title">Guests</h4>
        <ul class="list-group">
            @foreach(Rsvp rsvp in Model.Rsvps)
            {
                <li class="list-group-item list-group-item-action">@rsvp.UserRsvp.FirstName @rsvp.UserRsvp.LastName</li>
            }
        </ul>
    </div>
</div>