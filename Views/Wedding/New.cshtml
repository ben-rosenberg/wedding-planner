@model Wedding

@{
    ViewData["Title"] = "New Wedding";
}

<div class="row justify-content-between">
    <h1 class="text-center">Plan Your Wedding</h1>
    <a asp-controller="Wedding" asp-action="Dashboard">
        <button class="btn btn-outline-danger">Cancel</button>
    </a>
</div>
<div class="card">
    <div class="card-body">
        <form asp-controller="Wedding" asp-action="Create" method="post">
            <div class="form-group">
                <label asp-for="Wedder1Name"></label>
                <span asp-validation-for="Wedder1Name" class="text-danger font-weight-bold"></span>
                <input class="form-control" asp-for="Wedder1Name">
            </div>
            <div class="form-group">
                <label asp-for="Wedder2Name"></label>
                <span asp-validation-for="Wedder2Name" class="text-danger font-weight-bold"></span>
                <input class="form-control" asp-for="Wedder2Name">
            </div>
            <div class="form-group">
                <label asp-for="Date"></label>
                <span asp-validation-for="Date" class="text-danger font-weight-bold"></span>
                <input class="form-control" asp-for="Date">
            </div>
            <div class="form-group">
                <label asp-for="Address"></label>
                <span asp-validation-for="Address" class="text-danger font-weight-bold"></span>
                <input class="form-control" asp-for="Address">
            </div>
            <input type="submit" value="Create">
        </form>
    </div>
</div>